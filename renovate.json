{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "timezone": "UTC",
  "schedule": ["before 6am on monday"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "groupName": "Base image and Terraform tooling"
    },
    {
      "matchManagers": ["pip_requirements"],
      "groupName": "Python tools"
    }
  ],
  "regexManagers": [
    {
      "description": "Terraform version pins in Dockerfile",
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["TF_VERSION=(?<currentValue>[0-9.]+)"],
      "datasourceTemplate": "hashicorp",
      "packageNameTemplate": "terraform"
    },
    {
      "description": "TFLint version pins in Dockerfile",
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["TFLINT_VERSION=(?<currentValue>[0-9.]+)"],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "terraform-linters/tflint"
    },
    {
      "description": "terraform-docs version pins in Dockerfile",
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["TF_DOCS_VERSION=(?<currentValue>[0-9.]+)"],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "terraform-docs/terraform-docs"
    }
  ]
}
